{
  "name": "@g2g/packages",
  "version": "0.0.1",
  "description": "g2g packages",
  "type": "module",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint-staged": "lint-staged",
    "build": "cross-env NODE_ENV=production rollup --config ./rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "build:analyze": "cross-env NODE_ENV=production ANALYZE=true rollup --config ./rollup.config.ts --configPlugin @rollup/plugin-typescript"
  },
  "author": "Marsel Abazbekov",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-react": "^7.26.3",
    "@eslint/js": "^9.17.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-eslint": "^9.0.5",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@stylistic/eslint-plugin-js": "^2.12.1",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.3",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "rollup": "^4.29.1",
    "rollup-plugin-delete": "^2.1.0",
    "rollup-plugin-node-externals": "^8.0.0",
    "rollup-plugin-visualizer": "^5.13.1",
    "simple-git": "^3.27.0",
    "storybook": "^8.4.7",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0"
  },
  "dependencies": {
    "react": "^19.0.0"
  },
  "overrides": {
    "@rollup/plugin-eslint": {
      "eslint": "$eslint"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ]
  }
}
